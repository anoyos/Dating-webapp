@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<james.Models.DB.DiscountCoupon>
<div class="mt-5 pt-5">

    <div class="row m-0 form-style--3 ">

        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <h2>Discount Coupons</h2>
                </div>
                <div class="col-md-6 text-right">
                    <a href="/Admin/Discount" class="btn  btn-primary"><i class="fa fa-plus"></i> New Discount Coupon</a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-center">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Title</th>
                                <th>Code</th>
                                <th>Start&nbsp;Date</th>
                                <th>End&nbsp;Date</th>
                                <th>Percentage</th>
                                <th>Active</th>
                                <th>Description</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a class="fa fa-edit" href="/Admin/Discount?id=@item.id"></a>
                                    </td>
                       
                                    <td>@item.title</td>
                                    <td>@item.code</td>
                                    <td>@(item.start.ToString("dd-MMM-yyyy"))</td>
                                    <td>@(item.end.ToString("dd-MMM-yyyy"))</td>
                                    <td>@(item.percentage)%</td>
                                    <td>@(item.isActive?"Yes":"No")</td>
                                    <td>@item.description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
</div>
